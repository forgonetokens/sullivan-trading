<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Stencil+One&family=Oswald:wght@400;500;600;700&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Source+Code+Pro:wght@400;500;600&display=swap" rel="stylesheet">
<style>
  *,*::before,*::after{margin:0;padding:0;box-sizing:border-box}
  :root{
    --navy:#0f1a2e;
    --navy-light:#162240;
    --navy-mid:#1c2d4f;
    --slate:#2a3a5c;
    --gold:#c9a84c;
    --gold-dim:#a68a3a;
    --gold-bright:#e2c465;
    --cream:#e8dcc8;
    --cream-dim:#bfb49e;
    --fog:#7a899e;
    --rule:rgba(201,168,76,0.2);
    --rule-solid:#3a4a6c;
  }
  html{scroll-behavior:smooth}
  body{
    font-family:'Libre Baskerville','Georgia',serif;
    background:var(--navy);
    color:var(--cream);
    line-height:1.7;
  }

  /* ── subtle grain overlay on whole page ── */
  body::after{
    content:'';position:fixed;inset:0;pointer-events:none;z-index:9999;
    opacity:0.035;
    background-image:url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='g'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='256' height='256' filter='url(%23g)'/%3E%3C/svg%3E");
    background-size:200px 200px;
  }

  /* ── NAV ── */
  nav{
    position:fixed;top:0;left:0;right:0;z-index:100;
    background:rgba(15,26,46,0.95);backdrop-filter:blur(10px);
    border-bottom:1px solid var(--rule-solid);
    padding:0 2rem;display:flex;align-items:center;height:60px;
  }
  .nav-logo{
    font-family:'Oswald',sans-serif;font-size:1.1rem;font-weight:600;
    color:var(--gold);text-decoration:none;letter-spacing:.15em;text-transform:uppercase;
  }
  .nav-links{display:flex;gap:1.75rem;list-style:none;position:absolute;left:50%;transform:translateX(-50%)}
  .nav-links a{
    color:var(--fog);text-decoration:none;
    font-family:'Oswald',sans-serif;font-size:.8rem;font-weight:500;
    letter-spacing:.1em;text-transform:uppercase;transition:color .2s;
  }
  .nav-links a:hover{color:var(--gold)}
  .nav-phone{
    font-family:'Source Code Pro',monospace;color:var(--gold);font-weight:600;font-size:.85rem;text-decoration:none;
  }

  /* ── SECTIONS ── */
  section{padding:5rem 2rem}
  .container{max-width:960px;margin:0 auto}
  .section-label{
    font-family:'Source Code Pro',monospace;font-size:.8rem;font-weight:500;
    text-transform:uppercase;letter-spacing:.3em;color:var(--gold-dim);margin-bottom:.5rem;
  }
  .section-title{
    font-family:'Oswald',sans-serif;font-size:clamp(2.5rem,6vw,4rem);
    font-weight:700;color:var(--cream);line-height:1.05;letter-spacing:.04em;
    text-transform:uppercase;margin-bottom:.75rem;
  }
  .section-intro{
    font-size:1.1rem;color:var(--fog);max-width:620px;line-height:1.7;font-style:italic;
  }
  .sec-alt{background:var(--navy-light)}

  /* gold divider between sections */
  .gold-rule{height:1px;background:linear-gradient(90deg,transparent,var(--gold-dim),transparent);margin:0 auto;max-width:200px}

  /* ── Buttons ── */
  .btn{
    display:inline-block;padding:.85rem 2.25rem;
    font-family:'Oswald',sans-serif;font-weight:600;font-size:.85rem;
    letter-spacing:.12em;text-transform:uppercase;text-decoration:none;
    border:none;cursor:pointer;transition:all .25s;
  }
  .btn-gold{background:var(--gold);color:var(--navy)}
  .btn-gold:hover{background:var(--gold-bright)}
  .btn-outline{background:transparent;color:var(--cream-dim);border:1.5px solid var(--slate)}
  .btn-outline:hover{border-color:var(--gold);color:var(--gold)}

  /* ── FOOTER ── */
  footer{
    border-top:1px solid var(--rule-solid);padding:2rem;text-align:center;
    font-size:.8rem;color:var(--fog);font-style:italic;
  }

  /* ── MOBILE ── */
  .mobile-menu-btn{display:none;background:none;border:none;color:var(--cream);font-size:1.4rem;cursor:pointer}
  @media(max-width:768px){
    .nav-links{display:none;flex-direction:column;position:absolute;top:60px;left:0;right:0;background:var(--navy);border-bottom:1px solid var(--rule-solid);padding:1.25rem 2rem;gap:1rem}
    .nav-phone{display:none}
    .mobile-menu-btn{display:block}
    section{padding:3rem 1.25rem}
  }
</style>
